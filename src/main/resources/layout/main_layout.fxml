									AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
									AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
									<tabs>
										<Tab text="Subtitle">
											<content>
												<AnchorPane prefHeight="180.0" prefWidth="512.0">
													<children>
														<JFXListView fx:id="listViewSubtitle" layoutX="47.0"
															layoutY="157.0" styleClass="mylistview"
															AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
															AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
													</children>
												</AnchorPane>
											</content>
										</Tab>
										<Tab text="Favourite">
											<content>
												<AnchorPane minHeight="0.0" minWidth="0.0"
													prefHeight="180.0" prefWidth="512.0">
													<children>
														<JFXListView fx:id="favouriteListview"
															AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
															AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
													</children>
												</AnchorPane>
											</content>
										</Tab>
									</tabs>
								</JFXTabPane>
							</children>
						</AnchorPane>
					</children>
				</AnchorPane>
			</items>
		</SplitPane>
	</children>
</AnchorPane>
