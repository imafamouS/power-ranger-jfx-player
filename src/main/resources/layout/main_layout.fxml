			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<items>
				<AnchorPane fx:id="mediaContainer" maxWidth="1.7976931348623157E308"
					minWidth="720.0" styleClass="videocontainer">
					<children>
						<MediaView fx:id="videoPlayer" fitHeight="720.0"
							fitWidth="768.0" styleClass="videoplayer" />
						<ImageView fx:id="backImageView" fitHeight="40.0"
							fitWidth="40.0" pickOnBounds="true" preserveRatio="true"
							AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="10.0">
						</ImageView>
						<BorderPane AnchorPane.bottomAnchor="100.0"
							AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="200.0">
							<center>
								<Label fx:id="subtilelabel" text="Label"
									BorderPane.alignment="CENTER" />
							</center>
						</BorderPane>
						<JFXListView fx:id="listviewSubtitleFullScreen"
							minWidth="450.0" style="-fx-background-color: transparent;"
